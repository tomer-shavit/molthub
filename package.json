{
  "name": "clawster",
  "version": "0.1.0",
  "private": true,
  "description": "Self-hosted control plane for managing fleets of OpenClaw instances",
  "license": "MIT",
  "author": "Clawster Contributors",
  "homepage": "https://github.com/tomer-shavit/clawster",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomer-shavit/clawster.git"
  },
  "bugs": {
    "url": "https://github.com/tomer-shavit/clawster/issues"
  },
  "keywords": [
    "openclaw",
    "control-plane",
    "bot-management",
    "fleet-management",
    "self-hosted",
    "nestjs",
    "nextjs"
  ],
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev --concurrency 15",
    "dev:setup": "bash scripts/setup.sh",
    "lint": "turbo lint",
    "test": "turbo test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:generate": "turbo db:generate",
    "db:migrate": "turbo db:migrate",
    "db:push": "turbo db:push"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "knip": "^5.83.1",
    "prettier": "^3.2.4",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  }
}